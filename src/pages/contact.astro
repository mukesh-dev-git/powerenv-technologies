---
// src/pages/contact.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import PageHeader from '../components/PageHeader.astro';
---
<BaseLayout title="Contact Us">
    <PageHeader 
        title="Partner with Powerenv to Launch a Pilot Program"
        subtitle="The best way to understand the Powerenv advantage is to see it in action. Contact our team to design a pilot program for your specific needs."
    />

    <!-- =-=========================================== -->
    <!-- Contact Section -->
    <!-- ============================================= -->
    <section class="contact-section">
        <div class="container">
            <div class="contact-wrapper">
                <div class="contact-info">
                    <h3>Why a Pilot Program?</h3>
                    <p>We partner with DISCOMs to deploy targeted, paid pilot programs in your most challenging areas. This allows you to:</p>
                    <ul>
                        <li><strong>Prove the Technology:</strong> Witness the 100% reliability of our LoRaWAN network in your own environment.</li>
                        <li><strong>Quantify the ROI:</strong> Gather concrete data on loss reduction and operational savings.</li>
                        <li><strong>Build Confidence:</strong> Validate the solution with your technical and financial teams before a full-scale rollout.</li>
                    </ul>
                    <hr>
                    <h3>Direct Contact Info</h3>
                    <p>
                        <strong>Email:</strong> <a href="mailto:powerenvtechnologies@gmail.com">powerenvtechnologies@gmail.com</a><br>
                        <strong>Phone:</strong> +91 6380568055<br>
                        <strong>Address:</strong>Chennai, Tamil Nadu, India
                    </p>
                </div>

                <div class="contact-form-wrapper">
                    <h3>Submit an Inquiry</h3>
                    <form name="contact" method="POST" data-netlify="true" class="contact-form">
                        <div class="form-group">
                            <label for="name">Full Name</label>
                            <input type="text" id="name" name="name" required>
                        </div>
                        <div class="form-group">
                            <label for="designation">Designation</label>
                            <input type="text" id="designation" name="designation" required>
                        </div>
                        <div class="form-group">
                            <label for="organization">DISCOM / Organization</label>
                            <input type="text" id="organization" name="organization" required>
                        </div>
                        <div class="form-group">
                            <label for="email">Email Address</label>
                            <input type="email" id="email" name="email" required>
                        </div>
                         <div class="form-group">
                            <label for="phone">Phone Number</label>
                            <input type="tel" id="phone" name="phone">
                        </div>
                        <div class="form-group full-width">
                            <label for="message">Message</label>
                            <textarea id="message" name="message" rows="5" required></textarea>
                        </div>
                        <div class="form-group full-width">
                            <button type="submit" class="button-primary">Submit Inquiry</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

</BaseLayout>

<style>
    .contact-section {
        padding: 6rem 0;
        background-color: var(--neutral-light-gray);
    }
    .contact-wrapper {
        display: grid;
        grid-template-columns: 1fr 1.25fr;
        gap: 4rem;
        background: #fff;
        padding: 4rem;
        border-radius: 8px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

    .contact-info h3 {
        margin-bottom: 1.5rem;
    }
    .contact-info p {
        margin-bottom: 1.5rem;
    }
    .contact-info ul {
        list-style: none;
        padding-left: 0;
        margin-bottom: 2rem;
    }
    .contact-info li {
        padding-left: 1.5rem;
        position: relative;
        margin-bottom: 1rem;
    }
    .contact-info li::before {
        content: 'âœ“';
        color: var(--secondary-green);
        position: absolute;
        left: 0;
    }
    .contact-info hr {
        border: 0;
        border-top: 1px solid #e0e0e0;
        margin: 2rem 0;
    }

    /* Form Styles */
    .contact-form {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
    }
    .form-group {
        display: flex;
        flex-direction: column;
    }
    .full-width {
        grid-column: 1 / -1;
    }
    .form-group label {
        margin-bottom: 0.5rem;
        font-weight: bold;
        font-size: 0.9rem;
    }
    .form-group input,
    .form-group textarea {
        padding: 0.75rem;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-family: var(--font-body);
        font-size: 1rem;
        transition: border-color 0.3s, box-shadow 0.3s;
    }
    .form-group input:focus,
    .form-group textarea:focus {
        outline: none;
        border-color: var(--secondary-green);
        box-shadow: 0 0 0 3px rgba(44, 165, 141, 0.2);
    }
    .contact-form button {
        width: 100%;
        padding: 1rem;
        font-size: 1rem;
    }

    @media (max-width: 992px) {
        .contact-wrapper {
            grid-template-columns: 1fr;
            padding: 2rem;
        }
    }
    @media (max-width: 768px) {
        .contact-form {
            grid-template-columns: 1fr;
        }
    }
</style>
